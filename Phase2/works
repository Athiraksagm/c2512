project(Server)

include_directories(${CMAKE_SOURCE_DIR}/include ${CMAKE_CURRENT_SOURCE_DIR})
# Use the custom find module to locate TinyXML2
find_package(tinyxml2 REQUIRED)

# Include directories: add TinyXML2's include directory and your source directory.
include_directories(${TINYXML2_INCLUDE_DIRS})

add_executable(server server.cpp)
target_link_libraries(server ${TINYXML2_LIBRARIES} pthread)
