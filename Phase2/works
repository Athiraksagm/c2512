long getSystemBootTime() {
    struct sysinfo info;
    if (sysinfo(&info) == 0) {
        long boot_time = time(nullptr) - info.uptime;
        std::cout << "Current time: " << time(nullptr) << "\n";
        std::cout << "Uptime: " << info.uptime << "\n";
        std::cout << "Boot time calculated as: " << boot_time << "\n";
        return boot_time;
    }
    std::cerr << "Error getting system info!\n";
    return 0;
}