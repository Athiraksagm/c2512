cmake_minimum_required(VERSION 3.10)

# Project name
project(SystemStatLogging)

# Set C++14 standard
set(CMAKE_CXX_STANDARD 14)

# Include directories
include_directories(include)

# Add the executable for the server
add_executable(server src/server.cpp)

# Add the executable for the client
add_executable(client src/client.cpp)

# Link the required libraries (TinyXML2, pthread)
target_link_libraries(server pthread tinyxml2)
target_link_libraries(client pthread tinyxml2)

# Optionally, you can add more configuration for building client/server dependencies
# For example, if you have a separate config directory
