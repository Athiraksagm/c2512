#include "httplib.h"
#include "json.hpp"
#include <iostream>
#include <fstream>
#include <atomic>
#include <sys/sysinfo.h>
#include <unistd.h>

using json = nlohmann::json;

std::atomic<int> boot_count(0);
std::atomic<long> total_uptime(0);

std::string file_path = "../"; // Store files outside `build/`

// Function to get the system's boot time as a Unix timestamp
long getSystemBootTime() {
    struct sysinfo info;
    if (sysinfo(&info) == 0) {
        return time(nullptr) - info.uptime;  // Absolute boot time = current time - uptime
    }
    return 0;
}

// Load the boot count from the file
int loadBootCount() {
    std::ifstream file(file_path + "boot_count.txt");
    int count = 0;
    if (file.is_open()) {
        file >> count;
        file.close();
    }
    return count;
}

// Save the boot count to the file
void saveBootCount(int count) {
    std::ofstream file(file_path + "boot_count.txt");
    if (file.is_open()) {
        file << count;
        file.close();
    }
}

// Load the last boot time from the file
long loadLastBootTime() {
    std::ifstream file(file_path + "last_boot_time.txt");
    long last_boot_time = 0;
    if (file.is_open()) {
        file >> last_boot_time;
        file.close();
    }
    return last_boot_time;
}

// Save the current boot time to the file as a Unix timestamp
void saveLastBootTime(long boot_time) {
    std::ofstream file(file_path + "last_boot_time.txt");
    if (file.is_open()) {
        file << boot_time;
        file.close();
    }
}

// Function to check if the system has rebooted
bool hasSystemRebooted() {
    long current_boot_time = getSystemBootTime();
    long last_boot_time = loadLastBootTime();

    if (last_boot_time == 0) {  // First run, save the boot time and return false
        saveLastBootTime(current_boot_time);
        return false;
    }

    // If the current boot time is different from the last boot time, it means a reboot has occurred
    if (current_boot_time > 0 && current_boot_time != last_boot_time) {
        saveLastBootTime(current_boot_time); // Update last boot time to the current one
        return true;  // Reboot detected
    }

    return false;  // No reboot detected
}

// Save system stats to CSV
void saveStatsToCSV() {
    std::ofstream file(file_path + "system_stats.csv", std::ios_base::app);
    if (file.is_open()) {
        std::time_t now = std::time(nullptr);
        std::tm *local_time = std::localtime(&now);

        // Append stats to CSV: Date, Time, Boot Count, Uptime (seconds)
        file << 1900 + local_time->tm_year << "-"
             << 1 + local_time->tm_mon << "-"
             << local_time->tm_mday << ", "
             << local_time->tm_hour << ":"
             << local_time->tm_min << ":"
             << local_time->tm_sec << ", "
             << boot_count.load() << ", "
             << total_uptime.load() << "\n";
    } else {
        std::cerr << "Error opening CSV file!" << std::endl;
    }
}

// Update the system uptime
void updateUptime() {
    struct sysinfo info;
    if (sysinfo(&info) == 0) {
        total_uptime.store(info.uptime);  // Store uptime in atomic variable
    }
}

// Handle the client request to fetch stats
void handleClientRequest(const httplib::Request &req, httplib::Response &res) {
    updateUptime();  // Update uptime on each request

    json response_json;
    response_json["boot_count"] = boot_count.load();
    response_json["uptime"] = total_uptime.load();

    saveStatsToCSV();  // Save the stats to CSV after handling the request

    std::cout << "[Request Received] Boot Count: " << boot_count.load() << ", Uptime: " << total_uptime.load() << " seconds\n";

    res.set_header("Cache-Control", "no-store");
    res.set_content(response_json.dump(), "application/json");
}

int main() {
    // Load the boot count from the file
    int stored_boot_count = loadBootCount();

    // Check if the system has rebooted
    if (hasSystemRebooted()) {
        stored_boot_count += 1;  // Increment boot count only after a reboot
        saveBootCount(stored_boot_count);  // Save the updated boot count
    }

    boot_count.store(stored_boot_count);  // Store the boot count in atomic variable

    std::cout << "=============================\n"
              << " SYSTEM STAT LOGGING SERVER\n"
              << "=============================\n";

    std::cout << "Boot Count: " << boot_count.load() << "\n";
    std::cout << "Server running at http://localhost:8080...\n";
    std::cout << "Waiting for client requests...\n";

    // Ensure system_stats.csv file exists and has headers if it's the first run
    std::ifstream checkFile(file_path + "system_stats.csv");
    if (!checkFile.is_open()) {
        std::ofstream file(file_path + "system_stats.csv");
        if (file.is_open()) {
            file << "Date (YYYY-MM-DD), Time (HH-MM-SS), Boot Count, Uptime (seconds)\n";
            file.close();
        }
    }
    checkFile.close();

    // Start the server and listen for requests
    httplib::Server server;
    server.Get("/stats", handleClientRequest);
    server.listen("localhost", 8080);

    return 0;
}