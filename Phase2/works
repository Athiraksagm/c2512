void start_server(int port) {
    httplib::Server svr;

    svr.Get("/stats", [](const httplib::Request& req, httplib::Response& res) {
        nlohmann::json stats;
        stats["boot_count"] = getSystemBootCount();
        stats["uptime"] = getSystemUptime();
        stats["timestamp"] = getCurrentDateTime();
        
        res.set_content(stats.dump(), "application/json");
    });

    // Bind to 0.0.0.0 so it can accept requests from any network interface
    svr.listen("0.0.0.0", port);
}
