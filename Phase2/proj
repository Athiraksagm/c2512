main.cpp (Client)

#include "ApiClient.h"
#include "CsvLogger.h"
#include "JsonParser.h"
#include <iostream>

int main(int argc, char* argv[]) {
    bool logToCsv = (argc > 1 && std::string(argv[1]) == "--log-csv");

    ApiClient apiClient;
    JsonParser jsonParser;
    CsvLogger csvLogger;

    std::string response = apiClient.getStats();
    auto stats = jsonParser.parseJson(response);

    std::cout << "Boot Count: " << stats.bootCount << "\n";
    std::cout << "Uptime: " << stats.uptime << "\n";

    if (logToCsv) {
        csvLogger.logToCsv(stats);
    }

    return 0;
}

