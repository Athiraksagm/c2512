RestApiHandler.cpp (Server)

#include "RestApiHandler.h"
#include <cpprest/http_listener.h>
#include <cpprest/json.h>
#include <iostream>

RestApiHandler::RestApiHandler(StatisticsTracker& tracker) : statsTracker(tracker) {}

void RestApiHandler::startServer() {
    web::http::experimental::listener::http_listener listener(U("http://localhost:8080"));
    listener.support(web::http::methods::GET, std::bind(&RestApiHandler::handleRequest, this, std::placeholders::_1));
    listener
        .open()
        .then([](){ std::wcout << L"Server started at http://localhost:8080" << std::endl; })
        .wait();
}

void RestApiHandler::handleRequest(const web::http::http_request& request) {
    web::http::http_response response;
    response.set_status_code(web::http::status_codes::OK);
    
    web::json::value responseData;
    responseData[U("boot_count")] = web::json::value::number(statsTracker.getBootCount());
    responseData[U("uptime")] = web::json::value::number(statsTracker.getUptime());

    response.set_body(responseData);
    request.reply(response);
}

