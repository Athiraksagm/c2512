PeriodicUpdater.cpp (Server)

#include "PeriodicUpdater.h"

PeriodicUpdater::PeriodicUpdater(StatisticsTracker& tracker) : statsTracker(tracker) {}

void PeriodicUpdater::start() {
    while (true) {
        std::this_thread::sleep_for(std::chrono::seconds(10));
        statsTracker.incrementBootCount();  // Simulate system boot
        statsTracker.updateUptime(1000);   // Simulate uptime in seconds
    }
}


