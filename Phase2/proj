main.cpp (Server)

#include "RestApiHandler.h"
#include "StatisticsTracker.h"
#include "ConfigLoader.h"
#include "PeriodicUpdater.h"
#include <thread>

int main() {
    // Load configuration
    ConfigLoader configLoader("config/config.xml");
    configLoader.loadConfig();

    // Initialize the statistics tracker and periodic updater
    StatisticsTracker statsTracker;
    PeriodicUpdater periodicUpdater(statsTracker);
    std::thread updaterThread(&PeriodicUpdater::start, &periodicUpdater);

    // Start the server to handle REST API requests
    RestApiHandler apiHandler(statsTracker);
    apiHandler.startServer();

    // Wait for the updater thread to finish
    updaterThread.join();

    return 0;
}

