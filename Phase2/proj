CsvLogger.cpp (Client)

#include "CsvLogger.h"
#include <fstream>
#include <ctime>

void CsvLogger::logToCsv(const Stats& stats) {
    std::ofstream file("stats.csv", std::ios::app);
    if (!file.is_open()) {
        return;
    }

    time_t now = time(0);
    tm* currentTime = localtime(&now);

    file << currentTime->tm_year + 1900 << "-"
         << currentTime->tm_mon + 1 << "-"
         << currentTime->tm_mday << ","
         << currentTime->tm_hour << ":"
         << currentTime->tm_min << ":"
         << currentTime->tm_sec << ","
         << stats.bootCount << ","
         << stats.uptime << "\n";
}


