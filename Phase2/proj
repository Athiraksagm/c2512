#include "StatisticsTracker.h"
#include <gtest/gtest.h>

TEST(StatisticsTrackerTest, TestBootCount) {
    StatisticsTracker tracker;
    EXPECT_EQ(tracker.getBootCount(), 0);
    tracker.incrementBootCount();
    EXPECT_EQ(tracker.getBootCount(), 1);
}

TEST(StatisticsTrackerTest, TestUptime) {
    StatisticsTracker tracker;
    EXPECT_EQ(tracker.getUptime(), 0);
    tracker.updateUptime(1000);
    EXPECT_EQ(tracker.getUptime(), 1000);
}

int main(int argc, char** argv) {
    ::testing::InitGoogleTest(&argc, argv);
    return RUN_ALL_TESTS();
}

