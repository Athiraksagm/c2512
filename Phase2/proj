ConfigLoader.cpp (Server)

#include "ConfigLoader.h"
#include <tinyxml2.h>
#include <iostream>

ConfigLoader::ConfigLoader(const std::string& filePath) : configFilePath(filePath) {}

void ConfigLoader::loadConfig() {
    tinyxml2::XMLDocument doc;
    if (doc.LoadFile(configFilePath.c_str()) != tinyxml2::XML_SUCCESS) {
        std::cerr << "Error loading config file!" << std::endl;
        return;
    }

    tinyxml2::XMLElement* root = doc.FirstChildElement("config");
    if (root) {
        tinyxml2::XMLElement* intervalElement = root->FirstChildElement("interval");
        if (intervalElement) {
            int interval = std::stoi(intervalElement->GetText());
            std::cout << "Configured interval: " << interval << " seconds." << std::endl;
        }
    }
}

