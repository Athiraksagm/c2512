#include "JsonParser.h"
#include <cpprest/json.h>

JsonParser::Stats JsonParser::parseJson(const std::string& jsonResponse) {
    web::json::value json = web::json::value::parse(jsonResponse);
    Stats stats;
    stats.bootCount = json[U("boot_count")].as_integer();
    stats.uptime = json[U("uptime")].as_integer();
    return stats;
}

