cmake_minimum_required(VERSION 3.10)
project(Server)

set(CMAKE_CXX_STANDARD 14)

# Find Boost (only system is needed)
find_package(Boost REQUIRED COMPONENTS system)
include_directories(${Boost_INCLUDE_DIRS})

# Include directories
include_directories(include)

# Server executable
add_executable(server source/server.cpp source/tinyxml2.cpp)
target_link_libraries(server PRIVATE Boost::system tinyxml2)

# Google Test
enable_testing()
find_package(GTest REQUIRED)
include_directories(${GTEST_INCLUDE_DIRS})

# Create a library from server.cpp, EXCLUDING main()
add_library(server_library STATIC source/server.cpp)
target_link_libraries(server_library PRIVATE Boost::system)
set_target_properties(server_library PROPERTIES EXCLUDE_FROM_ALL TRUE)

# Test executable (DO NOT LINK server.cpp directly)
add_executable(test_server test/test_server.cpp)
target_link_libraries(test_server PRIVATE server_library tinyxml2 gtest gtest_main pthread)

add_test(NAME ServerTest COMMAND test_server)











