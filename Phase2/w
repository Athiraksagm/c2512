#include "server.h"
#include <gtest/gtest.h>
#include <boost/asio.hpp>
#include <boost/beast.hpp>

using namespace boost::asio;
using namespace boost::beast;

TEST(SystemStatsTest, HandleClientProcessesRequest) {
    // Simulate a TCP socket connection using Boost Asio
    io_context ioc;
    ip::tcp::socket socket(ioc);

    // Call handleClient() directly to verify it does not crash
    EXPECT_NO_THROW(handleClient(std::move(socket)));

    // Check that boot_count is initialized correctly
    EXPECT_GE(boot_count.load(), 0);

    // Check logging interval default value
    EXPECT_GT(logging_interval, 0);
}











