// Continuous reading (for periodic updates)
        while (true) {
            ws->read(buffer, ec);
            if (ec == websocket::error::closed) {
                std::cout << "Client disconnected: WebSocket closed\n";
                break;
            }
            if (ec) {
                std::cerr << "Client disconnected!! " << "\n";
                break;
            }
        }
