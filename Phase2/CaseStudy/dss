#include <iostream>
#include "admin_main.h"
#include "doctor_main.h"
#include "validation.h"

using namespace std;

void mainMenu() {
    while (true) {
        cout << "\nSelect Role:\n";
        cout << "[1] Admin\n";
        cout << "[2] Doctor\n";
        cout << "[99] Exit\n";
        int choice = getValidatedInteger("Choice: ");

        if (choice == 1) {
            adminApp();
        } else if (choice == 2) {
            doctorApp();
        } else if (choice == 99) {
            cout << "Exiting Application...\n";
            break;
        } else {
            cout << "Invalid choice!\n";
        }
    }
}

int main() {
    mainMenu();
    return 0;
}
